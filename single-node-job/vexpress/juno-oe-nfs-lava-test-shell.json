{
  "device_type": "juno",
  "logging_level": "DEBUG",
  "actions": [
    {
            "command": "deploy_linaro_kernel",
            "parameters": {
                "bootloadertype": "uefi",
                "dtb": "http://images.validation.linaro.org/functional-test-images/vexpress/juno.dtb",
                "kernel": "http://images.validation.linaro.org/functional-test-images/vexpress/Image",
                "nfsrootfs": "http://images.validation.linaro.org/functional-test-images/common/linaro-image-minimal-genericarmv8-20140823-710.rootfs.tar.gz"
            }
    },
    {
            "command": "lava_test_shell",
            "parameters": {
                "testdef_repos": [
                    {
                        "git-repo": "git://git.linaro.org/qa/test-definitions.git",
                        "testdef": "openembedded/smoke-tests-basic.yaml"
                    }
                ]
            }
    },
    {
      "command": "submit_results",
      "parameters": {
        "stream": "/private/team/wg/wg-private/",
        "server": "LAVA_SERVER"
      }
    }
  ],
  "timeout": 18000,
  "job_name": "juno-oe-nfs-lava-test-shell"
}
